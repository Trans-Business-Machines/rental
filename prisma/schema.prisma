generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Property {
  id          Int      @id @default(autoincrement())
  name        String
  address     String
  type        String
  units       Int
  occupied    Int      @default(0)
  rent        Int
  status      String   @default("active")
  description String
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenants   Tenant[]
  amenities Amenity[]

  @@map("properties")
}

model Tenant {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  phone      String
  unitNumber String
  leaseStart String
  leaseEnd   String
  rent       Int
  status     String   @default("active")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  propertyId Int
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@map("tenants")
}

model Amenity {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  icon        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  properties Property[]

  @@map("amenities")
}
